{
  "name": "vfc-next",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.2",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-define-config": "^1.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.3.4",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run site:build",
    "serve": "turbo run site:serve",
    "lint": "eslint --cache packages/*/{src,types,__tests__}/**",
    "format": "prettier --write --cache .",
    "np": "np",
    "site": "pnpm -F @vfc/doc-site site:deploy"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "playground/**/__tests__/**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@7.5.2",
  "pnpm": {
    "overrides": {
      "vitepress": "^1.0.0-alpha.4"
    }
  },
  "dependencies": {
    "np": "^7.6.2"
  }
}
